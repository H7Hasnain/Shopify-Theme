<a href="{{ product.url }}" class="card product-card">
  {% if product.featured_image %}
    {{ product.featured_image | image_url: width: 720 | image_tag: loading: 'lazy', sizes: '(max-width: 740px) 100vw, 360px', alt: product.title, class: 'product-card__image' }}
  {% endif %}
  <div class="card__body">
    <h3 class="product-card__title">{{ product.title }}</h3>
    {% render 'price', product: product %}
  </div>
</a>