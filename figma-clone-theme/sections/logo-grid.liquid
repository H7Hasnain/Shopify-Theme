<section class="section section--logo-grid">
  <div class="container">
    {% if section.settings.heading %}<h2 class="section__title">{{ section.settings.heading }}</h2>{% endif %}
    <div class="grid grid--{{ section.settings.columns }}" style="align-items:center;">
      {% for block in section.blocks %}
        <div class="card" style="display:grid; place-items:center; padding: 16px;" {{ block.shopify_attributes }}>
          {% if block.settings.logo %}
            {{ block.settings.logo | image_url: width: 320 | image_tag: class: 'logo-grid__image', style: 'max-height:48px; width:auto; object-fit:contain;' }}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Logo grid",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "range", "id": "columns", "label": "Columns", "min": 2, "max": 6, "step": 1, "default": 5 }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        { "type": "image_picker", "id": "logo", "label": "Logo" }
      ]
    }
  ],
  "max_blocks": 12
}
{% endschema %}