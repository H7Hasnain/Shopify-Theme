<section class="section section--collection">
  <div class="container">
    <div class="section__header">
      <h1 class="section__title">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="rte">{{ collection.description }}</div>
      {% endif %}
    </div>
    <div class="grid grid--{{ section.settings.columns }}">
      {% for product in collection.products limit: section.settings.product_count %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main collection",
  "settings": [
    { "type": "range", "id": "columns", "label": "Columns", "min": 2, "max": 4, "step": 1, "default": 4 },
    { "type": "range", "id": "product_count", "label": "Products per page", "min": 8, "max": 48, "step": 4, "default": 24 }
  ]
}
{% endschema %}